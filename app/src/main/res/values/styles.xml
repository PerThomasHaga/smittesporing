<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textTitle">
        <item name="android:textSize">32sp</item>
        <item name="lineHeight">38dp</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="textBasic">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">19dp</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="textButton">
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">22dp</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="inputOutlined" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
    </style>

    <style name="primaryButton">
        <item name="color">@color/colorPrimary</item>
        <item name="background">@style/textButton</item>
        <item name="android:layout_height">60dp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
